<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 class="form-header">Edit Profile</h1>
        <div class="form-center">
            <form action="/users/<%= user._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= user.firstName%>" name="firstName">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= user.lastName%>" name="lastName">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= user.email%>" name="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= user.bio%>" name="bio">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= user.avatar%>" name="avatar">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Your Profile</button>
                </div>
            </form>
            <a href="/users/<%= user._id%>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>